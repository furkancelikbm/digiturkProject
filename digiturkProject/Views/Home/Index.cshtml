<div id="form-container" class="fixed inset-0 bg-gray-800 bg-opacity-50 flex items-center justify-center z-50 hidden" onclick="closeModal(event)">
    <div class="bg-white w-full max-w-lg rounded-lg shadow-lg p-6 relative" onclick="event.stopPropagation()">
        <div class="text-center">
            <h2 class="text-2xl font-bold text-gray-800 mb-4">Sizi Arayalım</h2>
            <p class="text-gray-600 mb-6">Kampanyalarımız ve tüm gelişmeler hakkında detaylı bilgi almak için formu doldurun, hemen sizi arayalım.</p>
        </div>
        <form method="post" class="space-y-4" action="/">
            <div>
                <label asp-for="FullName" class="block text-sm font-medium text-gray-700">Ad Soyad</label>
                <input asp-for="FullName" type="text" maxlength="30" class="w-full mt-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" placeholder="Ad ve soyadınızı girin" />
                <span asp-validation-for="FullName" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700">Telefon</label>
                <input asp-for="PhoneNumber" type="tel" pattern="5[0-9]{9}" maxlength="10" minlength="10" class="w-full mt-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" placeholder="(5__) ___ __ __" />
                <span asp-validation-for="PhoneNumber" class="text-red-600 text-sm"></span>
                <small class="text-gray-500">Telefon numaranızı başında "0" olmadan giriniz.</small>
            </div>
            <div class="flex items-start space-x-2">
                <input asp-for="Consent" type="checkbox" class="mt-1" />
                <label asp-for="Consent" class="text-sm text-gray-600">
                    <a class="text-purple-500 underline" href="/acik-riza">Açık Rıza Metni</a> ve
                    <a class="text-purple-500 underline" href="/aydinlatma-metni">Aydınlatma Metni</a>'ni okudum ve onaylıyorum.
                </label>
                <span asp-validation-for="Consent" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <button type="submit" class="w-full bg-purple-600 text-white py-2 rounded-lg hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-offset-2">
                    Gönder
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        @* İstemci tarafı doğrulama scriptlerini (örneğin jQuery Validation) render ederiz. *@
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


<script>
    @* Formu açma fonksiyonu: 'form-container' elementinin 'hidden' sınıfını kaldırırız. *@
    function openModal() {
        document.getElementById("form-container").classList.remove("hidden");
    }

    @* Formu kapatma fonksiyonu: Tıklamanın modalın kendisine veya dışına yapılıp yapılmadığını kontrol ederiz. *@
    function closeModal(event) {
        const modal = document.getElementById("form-container");
        @* Eğer tıklama, modalın kendisi veya tıklama olayı ise modalı gizleriz. *@
        if (event.target === modal || event.type === "click") {
            modal.classList.add("hidden");
        }
    }
</script>