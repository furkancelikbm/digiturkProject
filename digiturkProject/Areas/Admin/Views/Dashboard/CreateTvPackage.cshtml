@model digiturkProject.Models.TvPackage

@{
    ViewData["Title"] = "TV Paketi Oluştur";
}

<div class="bg-white p-8 rounded-xl shadow-lg max-w-2xl mx-auto">
    <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">Yeni TV Paketi Oluştur</h2>

    <form asp-area="Admin" asp-controller="Dashboard" asp-action="CreateTvPackage" method="post" class="space-y-5">
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm p-3 bg-red-50 rounded-md border border-red-200 mb-4"></div>

        <div>
            <label asp-for="BadgeLeft" class="block text-sm font-medium text-gray-700 mb-1">Sol Rozet (İsteğe Bağlı)</label>
            <input asp-for="BadgeLeft" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 px-4 py-2" placeholder="Online Test" />
            <span asp-validation-for="BadgeLeft" class="text-red-500 text-xs mt-1"></span>
        </div>
        <div>
            <label asp-for="BadgeRight" class="block text-sm font-medium text-gray-700 mb-1">Sağ Rozet (İsteğe Bağlı)</label>
            <input asp-for="BadgeRight" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 px-4 py-2" placeholder="TV" />
            <span asp-validation-for="BadgeRight" class="text-red-500 text-xs mt-1"></span>
        </div>
        <div>
            <label asp-for="ImageSrc" class="block text-sm font-medium text-gray-700 mb-1">Görsel Kaynak Yolu (örn: images/card1.png)</label>
            <input asp-for="ImageSrc" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 px-4 py-2" placeholder="images/card1.png" />
            <span asp-validation-for="ImageSrc" class="text-red-500 text-xs mt-1"></span>
        </div>
        <div>
            <label asp-for="ImageAlt" class="block text-sm font-medium text-gray-700 mb-1">Görsel Alternatif Metni</label>
            <input asp-for="ImageAlt" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 px-4 py-2" placeholder="Lorem ipsum dolor sit amet." />
            <span asp-validation-for="ImageAlt" class="text-red-500 text-xs mt-1"></span>
        </div>
        <div>
            <label asp-for="Title" class="block text-sm font-medium text-gray-700 mb-1">Başlık</label>
            <input asp-for="Title" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 px-4 py-2" placeholder="Lorem ipsum dolor." />
            <span asp-validation-for="Title" class="text-red-500 text-xs mt-1"></span>
        </div>
        <div>
            <label asp-for="FeaturesJson" class="block text-sm font-medium text-gray-700 mb-1">Özellikler (JSON Dizi Metni, örn: ["Özellik 1", "Özellik 2"])</label>
            <textarea asp-for="FeaturesJson" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 px-4 py-2 h-32" placeholder='["Özellik 1", "Özellik 2", "Özellik 3"]'></textarea>
            <span asp-validation-for="FeaturesJson" class="text-red-500 text-xs mt-1"></span>
        </div>
        <div>
            <label asp-for="Price" class="block text-sm font-medium text-gray-700 mb-1">Fiyat (örn: ₺999 /Ay)</label>
            <input asp-for="Price" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 px-4 py-2" placeholder="₺999 /Ay" />
            <span asp-validation-for="Price" class="text-red-500 text-xs mt-1"></span>
        </div>
        <div>
            <label asp-for="DetailLink" class="block text-sm font-medium text-gray-700 mb-1">Detay Linki</label>
            <input asp-for="DetailLink" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 px-4 py-2" placeholder="/digiturk-taraftar-paketi-2" />
            <span asp-validation-for="DetailLink" class="text-red-500 text-xs mt-1"></span>
        </div>

        <div class="flex justify-end space-x-3 mt-8">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2.5 px-5 rounded-lg shadow-md transition duration-300 ease-in-out flex items-center">
                <i class="fas fa-save mr-2"></i> Oluştur
            </button>
            <a href="@Url.Action("TvPackages", "Dashboard", new { area = "Admin" })" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2.5 px-5 rounded-lg shadow-md transition duration-300 ease-in-out flex items-center">
                <i class="fas fa-arrow-left mr-2"></i> Listeye Geri Dön
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
