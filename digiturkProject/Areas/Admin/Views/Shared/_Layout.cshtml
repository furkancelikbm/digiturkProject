<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yönetim Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc; /* Açık gri arka plan */
        }

        .sidebar {
            width: 280px; /* Genişletilmiş kenar çubuğu */
            background-color: #1a202c; /* Koyu lacivert */
            color: #e2e8f0; /* Açık gri metin */
            min-height: 100vh;
            padding: 2rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Hafif gölge */
        }

            .sidebar a {
                display: flex;
                align-items: center;
                padding: 0.85rem 1.25rem;
                margin-bottom: 0.75rem;
                border-radius: 0.75rem; /* Daha yuvarlak köşeler */
                color: #e2e8f0;
                transition: background-color 0.3s ease, color 0.3s ease;
                font-weight: 500;
            }

                .sidebar a:hover {
                    background-color: #2d3748; /* Üzerine gelindiğinde daha açık koyu */
                    color: #ffffff;
                }

                .sidebar a.active {
                    background-color: #4299e1; /* Mavi vurgu rengi */
                    color: #ffffff;
                    font-weight: 600;
                    box-shadow: 0 2px 4px rgba(66, 153, 225, 0.4);
                }

                .sidebar a svg {
                    margin-right: 0.75rem;
                    width: 20px;
                    height: 20px;
                }

        .main-content {
            flex: 1;
            padding: 2rem;
            background-color: #f8fafc;
        }

        .header-card {
            background-color: #ffffff;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            border-radius: 0.75rem;
            padding: 1.5rem 2rem;
            margin-bottom: 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>
    <!-- FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="flex">
        <!-- Kenar Çubuğu -->
        <aside class="sidebar">
            <h2 class="text-3xl font-extrabold text-white mb-10 text-center">Digiturk Admin</h2>
            <nav>
                <ul>
                    <li>
                        <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Matches", "Dashboard", new { area = "Admin" })" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Matches" ? "active" : "")">
                            <i class="fas fa-futbol"></i> Maçlar
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("TvPackages", "Dashboard", new { area = "Admin" })" class="@(ViewContext.RouteData.Values["Action"].ToString() == "TvPackages" ? "active" : "")">
                            <i class="fas fa-tv"></i> TV Paketleri
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("InternetPackages", "Dashboard", new { area = "Admin" })" class="@(ViewContext.RouteData.Values["Action"].ToString() == "InternetPackages" ? "active" : "")">
                            <i class="fas fa-wifi"></i> İnternet Paketleri
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Ana İçerik -->
        <div class="main-content">
            <header class="header-card">
                <h1 class="text-3xl font-bold text-gray-800">@ViewData["Title"]</h1>
                <!-- Buraya kullanıcı bilgisi veya çıkış butonu eklenebilir -->
            </header>

            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
